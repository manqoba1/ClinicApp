<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.codetribe1.hack.WelcomeFragment">


  <RelativeLayout
      android:visibility="visible"
      android:background="@color/grey"
      android:id="@+id/welcomeTopLayout"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="-28dp">

     <ImageView
         android:id="@+id/welcomeimg"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:src="@drawable/download" />
        <!-- android:layout_marginTop="28dp"-->


      </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="-35dp"
        android:visibility="visible"
        android:background="@color/grey"
        android:id="@+id/welcomeLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/welcomeTopLayout">
        <TextView
            android:textStyle="bold"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:id="@+id/welcomeTxt"
            android:text="Welcome to the Clinic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />



        </RelativeLayout>

    <TextView
        android:textStyle="bold"
        android:textColor="@color/grey"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:id="@+id/wiftxt"
        android:text="Pateint details"
        android:textSize="25dp"
        android:layout_below="@+id/welcomeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/nametxt"
        android:layout_below="@+id/wiftxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username:         Sasa"
        android:textColor="@color/grey"

        />

    <TextView
        android:id="@+id/pstxt"
        android:layout_below="@+id/nametxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location :   Magona Village"
        android:textColor="@color/grey"

        />


    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        style="?actionBarSplitStyle"
        android:background="@color/grey"
        android:spinnerMode="dialog"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



</RelativeLayout>
